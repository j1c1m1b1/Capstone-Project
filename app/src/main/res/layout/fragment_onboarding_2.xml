<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/inner_padding_double"
    android:paddingTop="@dimen/inner_padding_double">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_preferred_size"
        android:layout_height="@dimen/image_preferred_size"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/location"
        android:src="@drawable/location"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginEnd="@dimen/inner_padding_double"
        android:layout_marginLeft="@dimen/inner_padding_double"
        android:layout_marginRight="@dimen/inner_padding_double"
        android:layout_marginStart="@dimen/inner_padding_double"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pg_2_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_default"
            android:text="@string/pg_2_subtitle"
            android:textColor="@color/white"/>
    </LinearLayout>


</FrameLayout>